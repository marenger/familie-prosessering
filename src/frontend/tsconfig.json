{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "target": "es6",
        "typeRoots": ["../../node_modules/@types", "./@types"]
    },
    "exclude": [
        "../../node_modules",
    ]
}